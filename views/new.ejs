<%- include("partials/header") %>

<div class="container new-container" style="padding-top: 50px">
    <h3 class="center">Add note</h3>
    <div class="new-form">
        <p>Fill in the form to create a new note</p>
        <form action="/notes" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="title" placeholder="Note title">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="content" placeholder="Note content">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="media" placeholder="Attach any media content">
            </div>
            <div class="form-group">
                <input type="submit" class="form-control" value="Add note">
            </div>
        </form>
    </div>
</div>

<%- include("partials/footer") %>