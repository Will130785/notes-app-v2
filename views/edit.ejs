<%- include("partials/header") %>

<div class="container">
    <h2 class="center">Edit note</h2>
    <div class="card">
        <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="title" value="<%= note.title %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="content" value="<%= note.content %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="media" value="<%= note.media %>">
            </div>
            <div class="form-group">
                <input type="submit" class="form-control" value="Add note">
            </div>
        </form>
    </div>
</div>

<%- include("partials/footer") %>